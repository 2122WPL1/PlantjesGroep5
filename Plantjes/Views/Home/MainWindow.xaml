<Window x:Name="Main"
        x:Class="Plantjes.Views.Home.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:pages="clr-namespace:Plantjes.Views.UserControls"
        xmlns:viewModels="clr-namespace:Plantjes.ViewModels" xmlns:pages1="clr-namespace:Plantjes.Views.Home"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1250" WindowState="Maximized">

    <Window.Resources>
        <!-- templates die nodig zijn voor de navigatie van de app-->
        <DataTemplate DataType = "{x:Type viewModels:ViewModelNameResult}">
            <pages:UserControlName/>
        </DataTemplate>

        <DataTemplate DataType = "{x:Type viewModels:ViewModelHabitat}">
            <pages:UserControlHabitat/>
        </DataTemplate>


        <DataTemplate DataType = "{x:Type viewModels:ViewModelBloom}">
            <pages:UserControlBloom/>
        </DataTemplate>

        <DataTemplate DataType = "{x:Type viewModels:ViewModelGrow}">
            <pages:UserControlGrow/>
        </DataTemplate>

        <DataTemplate DataType = "{x:Type viewModels:ViewModelGrooming}">
            <pages:UserControlGrooming/>
        </DataTemplate>

        <DataTemplate DataType = "{x:Type viewModels:ViewModelAppearance}">
            <pages:UserControlAppearance/>
        </DataTemplate>

        <DataTemplate DataType = "{x:Type viewModels:ViewModelImages}">
            <pages:UserControlImages/>
        </DataTemplate>

        <DataTemplate DataType = "{x:Type viewModels:ViewModelRequest}">
            <pages:UserControlRequest/>
        </DataTemplate>
        <DataTemplate DataType = "{x:Type viewModels:ViewModelUserManagement}">
            <pages:UserControlUserManagement/>
        </DataTemplate>
        <DataTemplate DataType = "{x:Type viewModels:ViewModelRegister}">
            <pages1:RegisterWindow/>
        </DataTemplate>
    </Window.Resources>

    <Window.Background>
        <SolidColorBrush Color="#FFC6DCBF"/>
    </Window.Background>

    <Viewbox>
        <Grid Opacity="0.9">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="938*"/>
                <ColumnDefinition Width="349*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="884.04"></RowDefinition>
            </Grid.RowDefinitions>

            <!-- verschillende buttons -->
            <Button x:Name="btnNaam" Content="naam" HorizontalAlignment="Left" Margin="42,14,0,0" VerticalAlignment="Top" Height="32" Width="125" BorderBrush="#FF595757"  Background="#FF33BE11"   FontWeight="Bold" FontSize="20" Foreground="White" 
                Command="{Binding mainNavigationCommand}"
                CommandParameter="VIEWNAME" >
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
            </Button>


            <Button x:Name="btnBloei" Content="bloei" HorizontalAlignment="Left" Margin="172,14,0,0" VerticalAlignment="Top" Height="32" Width="122" BorderBrush="#FF595757"  Background="#FF33BE11"   FontWeight="Bold" FontSize="20" Foreground="White"
                Command="{Binding mainNavigationCommand}"
                CommandParameter="VIEWBLOOM">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
            </Button>

            <Button x:Name="btnGroei" Content="groei" HorizontalAlignment="Left" Margin="299,14,0,0" VerticalAlignment="Top" Height="32" Width="125" BorderBrush="#FF595757"  Background="#FF33BE11"   FontWeight="Bold" FontSize="20" Foreground="White"
                Command="{Binding mainNavigationCommand}"
                CommandParameter="VIEWGROW">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
            </Button>

            <Button x:Name="btnHabitat" Content="habitat" HorizontalAlignment="Left" Margin="429,14,0,0" VerticalAlignment="Top" Height="32" Width="125" BorderBrush="#FF595757"  Background="#FF33BE11"   FontWeight="Bold" FontSize="20" Foreground="White"
                Command="{Binding mainNavigationCommand}"
                CommandParameter="VIEWHABITAT">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
            </Button>

            <Button x:Name="btnUiterlijk" Content="uiterlijk" HorizontalAlignment="Left" Margin="560,14,0,0" VerticalAlignment="Top" Height="32" Width="124" BorderBrush="#FF595757"  Background="#FF33BE11"   FontWeight="Bold" FontSize="20" Foreground="White"
                Command="{Binding mainNavigationCommand}"
                CommandParameter="VIEWAPPEARANCE">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
            </Button>

            <Button x:Name="btnVerzorging" Content="verzorging" HorizontalAlignment="Left" Margin="688,14,0,0" VerticalAlignment="Top" Height="32" Width="125" BorderBrush="#FF595757"  Background="#FF33BE11"   FontWeight="Bold" FontSize="20" Foreground="White"
                Command="{Binding mainNavigationCommand}"
                CommandParameter="VIEWGROOMING">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
            </Button>

            <Button x:Name="btnFotos" Content="foto's toevoegen" HorizontalAlignment="Left" Margin="818,14,0,0" VerticalAlignment="Top" Height="32" Width="166" BorderBrush="#FF595757"  Background="#FF33BE11"   FontWeight="Bold" FontSize="20" Foreground="White"
                Command="{Binding mainNavigationCommand}"
                CommandParameter="VIEWIMAGES" Grid.ColumnSpan="2">

                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
            </Button>


            <Button x:Name="btnLopendVerzoek" Content="lopend verzoek" HorizontalAlignment="Left" Margin="128,14,0,0" VerticalAlignment="Top" Height="32" Width="168" BorderBrush="#FF595757"  Background="#FF33BE11"   FontWeight="Bold" FontSize="20" Foreground="White"
                Command="{Binding mainNavigationCommand}"
                CommandParameter="VIEWREQUEST" Grid.Column="1">

                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
            </Button>

            <Button x:Name="btnSorteer" Content="sorteer bij:" HorizontalAlignment="Left" Margin="652,51,0,0" VerticalAlignment="Top" Height="32" Width="125" BorderBrush="#FF595757"  Background="#FF33BE11"   FontWeight="Bold" FontSize="20" Foreground="White">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
            </Button>


            <Button x:Name="btnImporteerStudenten" 
                Content="importeren studenten" HorizontalAlignment="Left" Margin="782,51,0,0" VerticalAlignment="Top" Height="32" Width="255" BorderBrush="#FF595757"  Background="#FF33BE11"   FontWeight="Bold" FontSize="20" Foreground="White"
                    Command="{Binding mainNavigationCommand}"
                    CommandParameter="VIEWUSERMANAGEMENT"
                    Visibility="{Binding btnVisible, Mode=TwoWay}" Grid.ColumnSpan="2">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
            </Button>

            <Button x:Name="btnRegister" Content="registreer" HorizontalAlignment="Left" Margin="181,51,0,0" VerticalAlignment="Top" Height="32" Width="168" BorderBrush="#FF595757"  Background="#FF33BE11"   FontWeight="Bold" FontSize="20" Foreground="White"
                    Command="{Binding mainNavigationCommand}"
                    CommandParameter="VIEWREGISTER"
                    Visibility="{Binding btnVisible, Mode=TwoWay}" Grid.Column="1">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
            </Button>



            <ListBox x:Name="lstDetails" Visibility="Hidden" Margin="560,176,47,700" Background="#99FFFFFF" Grid.ColumnSpan="2"/>


            <!-- hier doe je de binding van het currentViewModel !Clue van het systeem -->
            <Grid x:Name="MainContent" HorizontalAlignment="Left" Width="1230" Margin="28,101,0,0" Height="727" VerticalAlignment="Top" Grid.ColumnSpan="2">
                <ContentControl Content="{Binding currentViewModel}" HorizontalAlignment="Left" Width="1210" Height="754" VerticalAlignment="Center" Margin="10,0,0,0"/>
            </Grid>

            <!-- log in boodschap-->
            <Canvas Margin="42,51,254,796" Background="#99FFFFFF">
                <Label x:Name="lblLogin" Content="{Binding loggedInMessage}" Foreground="#FF474029" FontWeight="Bold" FontSize="20" Height="38" Canvas.Top="-1" Width="647"/>
            </Canvas>



        </Grid>
    </Viewbox>

</Window>
