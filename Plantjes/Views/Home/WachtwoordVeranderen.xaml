<Window x:Class="Plantjes.Views.Home.WachtwoordVeranderen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Plantjes.Views.Home"
        mc:Ignorable="d"
        Title="WachtwoordVeranderen" Height="450" Width="800">



    <Window.Background>
        <SolidColorBrush Color="#FFC6DCBF"/>
    </Window.Background>
    <Viewbox MaxHeight="500" MaxWidth="560">

        <Grid Height="500" Width="560">
            <Grid.RowDefinitions>
                <RowDefinition Height="373*"/>
                <RowDefinition Height="127*"/>
            </Grid.RowDefinitions>
            <Image Margin="20,8,361,194" Source="/Image/Vives_Logo_NeoGreen.png"  />
            <TextBox Margin="232,73,21,201" TextWrapping="Wrap" Text="Plantendatabase" Background="#FFC6DCBF" BorderBrush="{x:Null}" Foreground="White" FontSize="36" FontWeight="Bold" IsReadOnly="True"/>

            <Label Content="Geef nieuw wachtwoord in " HorizontalAlignment="Left" Margin="10,187,0,0" VerticalAlignment="Top" Foreground="#FF10380A" FontWeight="Bold" FontSize="15" Height="36" Width="203"/>
            <Label Content="Herhaling Wachtwoord" HorizontalAlignment="Left" Margin="10,250,0,0" VerticalAlignment="Top" Foreground="#FF10380A" FontWeight="Bold" FontSize="15" Height="36" Width="203"/>
            <TextBox x:Name="newPassword" Margin="232,193,161,156"  Foreground="#FF10380A" FontSize="20" FontWeight="Bold"/>
            <TextBox x:Name="controlPassword" Margin="232,256,161,93"  Foreground="#FF10380A" FontSize="20" FontWeight="Bold"/>
            <Button x:Name="btnRegisterNewPassword" Content="Registreer nieuw wachtwoord" Margin="232,321,161,22" BorderBrush="#FF595757"  Background="#FF33BE11"   FontWeight="Bold" FontSize="11" Foreground="White" 
                    Command="{Binding Path= newPasswordCmd}" Click="btnRegisterNewPassword_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Label x:Name="lblErrorsPassword" Content="Error " HorizontalAlignment="Left" Margin="199,136,0,0" VerticalAlignment="Top" Foreground="#FF10380A" FontWeight="Bold" FontSize="15" Height="36" Width="203" Visibility="Hidden"/>

        </Grid>
    </Viewbox>
</Window>
