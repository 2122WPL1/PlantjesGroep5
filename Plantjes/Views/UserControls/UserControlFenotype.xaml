<UserControl x:Class="Plantjes.Views.UserControls.UserControlFenotype" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"  
             d:DesignHeight="790" d:DesignWidth="1160" Background="#FFC6DCBF">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <!--BladGrootte-->
            <Canvas x:Name="cvsBezonning" Grid.Column="0">
                <Grid Background="#FFE8E5BF" Width="180" Height="230" Canvas.Left="26" Canvas.Top="15" HorizontalAlignment="Center" VerticalAlignment="Top">
                    <StackPanel Orientation="Vertical">
                        <Label Content="bladgrootte" Foreground="Black"   Height="40" Width="194"     BorderThickness="1" FontWeight="Bold" FontSize="14" />
                        <ItemsControl ItemsSource="{Binding Path=AbioControlsBezonning}" Width="180" Height="190" Canvas.Left="26" Canvas.Top="15" >
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </StackPanel>
                </Grid>
            </Canvas>
            <!--Bladvorm-->
            <Canvas x:Name="cvsBladvorm" Grid.Column="1">
                <Grid Background="#FFE8E5BF" Width="180" Height="230" Canvas.Left="26" Canvas.Top="15" HorizontalAlignment="Center" VerticalAlignment="Top">
                    <StackPanel Orientation="Vertical">
                        <Label Content="bladvorm" Foreground="Black"   Height="40" Width="194"     BorderThickness="1" FontWeight="Bold" FontSize="14" />
                        <ItemsControl ItemsSource="{Binding Path=AbioControlsBezonning}" Width="180" Height="190" Canvas.Left="26" Canvas.Top="15" >
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </StackPanel>
                </Grid>
            </Canvas>

            <!--Ratiobloeiblad-->
            <Canvas x:Name="cvsRatiobloeiblad" Grid.Column="2">
                <Grid Background="#FFE8E5BF" Width="180" Height="230" Canvas.Left="26" Canvas.Top="15" HorizontalAlignment="Center" VerticalAlignment="Top">
                    <StackPanel Orientation="Vertical">
                        <Label Content="ratiobloeiblad" Foreground="Black"   Height="40" Width="194"     BorderThickness="1" FontWeight="Bold" FontSize="14" />
                        <ItemsControl ItemsSource="{Binding Path=AbioControlsBezonning}" Width="180" Height="190" Canvas.Left="26" Canvas.Top="15" >
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </StackPanel>
                </Grid>
            </Canvas>
            <!--Spruitfenologie-->
            <Canvas x:Name="cvsSpruitfenologie" Grid.Column="3">
                <Grid Background="#FFE8E5BF" Width="180" Height="230" Canvas.Left="26" Canvas.Top="15" HorizontalAlignment="Center" VerticalAlignment="Top">
                    <StackPanel Orientation="Vertical">
                        <Label Content="spruitfenologie" Foreground="Black"   Height="40" Width="194"     BorderThickness="1" FontWeight="Bold" FontSize="14" />
                        <ItemsControl ItemsSource="{Binding Path=AbioControlsBezonning}" Width="180" Height="190" Canvas.Left="26" Canvas.Top="15" >
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </StackPanel>
                </Grid>
            </Canvas>
            <!--Bloeiwijze-->
            <Canvas x:Name="cvsBloeiwijze" Grid.Column="4">
                <Grid Background="#FFE8E5BF" Width="180" Height="230" Canvas.Left="26" Canvas.Top="15" HorizontalAlignment="Center" VerticalAlignment="Top">
                    <StackPanel Orientation="Vertical">
                        <Label Content="bloeiwijze" Foreground="Black"   Height="40" Width="194"     BorderThickness="1" FontWeight="Bold" FontSize="14" />
                        <ItemsControl ItemsSource="{Binding Path=AbioControlsBezonning}" Width="180" Height="190" Canvas.Left="26" Canvas.Top="15" >
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </StackPanel>
                </Grid>
            </Canvas>
        </Grid>


        <!--Levensvorm-->
        <Grid Grid.Row="2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid>
                    <!--Habitus-->
                    <Grid>
                        <Canvas x:Name="cvsHabitus">
                            <Grid Grid.Column="0" Height="230" Width="340" Canvas.Left="22" Background="#FFE8E5BF" HorizontalAlignment="Center" VerticalAlignment="Top" Canvas.Top="18" >
                                <StackPanel Orientation="Vertical">
                                    <Label Content="habitus" Foreground="Black"   Height="40" Width="194"     BorderThickness="1" FontWeight="Bold" FontSize="14" />
                                    <ItemsControl ItemsSource="{Binding Path=AbioControlsHabitat}" Height="190" Width="340" Canvas.Left="28" Canvas.Top="42">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel />
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                    </ItemsControl>
                                </StackPanel>
                            </Grid>
                        </Canvas>
                    </Grid>
                </Grid>
                <!--Levensvorm-->
                <Grid Grid.Column="1">
                    <Canvas x:Name="cvsLevensvorm" Height="173" Width="340" Canvas.Left="28" Canvas.Top="42" Margin="33,16,227,74">
                        <Grid Height="230" Width="340" Background="#FFE8E5BF" HorizontalAlignment="Left" VerticalAlignment="Top">
                            <StackPanel Orientation="Vertical">
                                <Label Content="levensvorm" Foreground="Black"   Height="40" Width="194"     BorderThickness="1" FontWeight="Bold" FontSize="14" />
                                <ItemsControl ItemsSource="{Binding Path=AbioControlsHabitat}" Height="190" Canvas.Left="28" Canvas.Top="42" Width="340">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                </ItemsControl>
                            </StackPanel>
                        </Grid>
                    </Canvas >
                </Grid>
                <!--Button-->
                <Grid Grid.Column="2">
                    <Canvas>
                        <Button x:Name="BtnOpslagZoekenFenotype" Content="opslaan fenotype" Width="222" Height="50"  BorderBrush="#FF595757"  Background="#FF1C610B"   FontWeight="Bold" FontSize="20" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Center" Canvas.Left="111" Canvas.Top="106">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="10"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </Canvas>
                </Grid>
            </Grid>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid/>
            <Grid Grid.Column="1"/>
            <Grid Grid.Column="2"/>
            <Grid Grid.Column="3"/>
            <!--Bladhoogte-->
            <Grid>
                <Canvas x:Name="cvsB" Grid.Column="0">
                    <Grid Background="#FFE8E5BF" Width="220" Height="230" Canvas.Left="26" Canvas.Top="7" HorizontalAlignment="Center" VerticalAlignment="Top">
                        <StackPanel Orientation="Vertical">
                            <Label Content="bloeikleur" Foreground="Black"   Height="40" Width="194"     BorderThickness="1" FontWeight="Bold" FontSize="14" />
                            <ItemsControl ItemsSource="{Binding Path=AbioControlsBezonning}" Width="220" Height="190" Canvas.Left="26" Canvas.Top="7" >
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                            </ItemsControl>
                        </StackPanel>
                    </Grid>
                </Canvas>
            </Grid>
            <!--BladKleur-->
            <Canvas x:Name="cvsBladkleur" Grid.Column="1">
                <Grid Background="#FFE8E5BF" Width="220" Height="230" Canvas.Left="26" Canvas.Top="7" HorizontalAlignment="Center" VerticalAlignment="Top">
                    <StackPanel Orientation="Vertical">
                        <Label Content="bladkleur" Foreground="Black"   Height="40" Width="194"     BorderThickness="1" FontWeight="Bold" FontSize="14" />
                        <ItemsControl ItemsSource="{Binding Path=AbioControlsBezonning}" Width="220" Height="190" Canvas.Left="26" Canvas.Top="7" >
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </StackPanel>
                </Grid>
            </Canvas>
            <!--BloeiHoogte-->
            <Canvas x:Name="cvsBloeihoogte" Grid.Column="2">
                <Grid Background="#FFE8E5BF" Width="220" Height="230" Canvas.Left="26" Canvas.Top="7" HorizontalAlignment="Center" VerticalAlignment="Top">
                    <StackPanel Orientation="Vertical">
                        <Label Content="bloeihoogte" Foreground="Black"   Height="40" Width="194"     BorderThickness="1" FontWeight="Bold" FontSize="14" />
                        <ItemsControl ItemsSource="{Binding Path=AbioControlsBezonning}" Width="220" Height="190" Canvas.Left="26" Canvas.Top="7" >
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </StackPanel>
                </Grid>
            </Canvas>
            <!--BloeiKleur-->
            <Canvas x:Name="cvsBloeiKleur" Grid.Column="3">
                <Grid Background="#FFE8E5BF" Width="220" Height="230" Canvas.Left="26" Canvas.Top="7" HorizontalAlignment="Center" VerticalAlignment="Top">
                    <StackPanel Orientation="Vertical">
                        <Label Content="bloeikleur" Foreground="Black"   Height="40" Width="194"     BorderThickness="1" FontWeight="Bold" FontSize="14" />
                        <ItemsControl ItemsSource="{Binding Path=AbioControlsBezonning}" Width="220" Height="190" Canvas.Left="26" Canvas.Top="7" >
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </StackPanel>
                </Grid>
            </Canvas>
        </Grid>
    </Grid>
</UserControl>
